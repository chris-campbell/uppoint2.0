generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  role      Role     @default(USER)

  alerts    Alert[]
}

model Alert {
  id        String   @id @default(uuid())
  message   String
  type      AlertType
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

enum Role {
  USER
  ADMIN
}

enum AlertType {
  INFO
  WARNING
  ERROR
  SUCCESS
}
